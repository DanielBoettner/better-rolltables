<div class="table-draw" {{#if this.compendium}}data-pack="{{this.compendium}}"{{/if}} {{#if this.id}}data-id="{{this.id}}"{{/if}}>
    {{#if tableData.description}}
    <div class="table-description">{{tableData.description}}</div>
    {{/if}}
    {{#if currency}}
    <div class="table-description" style="font-size: 15px; text-align: center; font-weight:bold;"> {{localize 'BRT.Currency'}}{{currency}}</div>
    {{/if}}

    <ol class="table-results">
        {{#each itemsData as |itemData|}}
        <li class="table-result flexrow">
            <img class="result-image" src="{{#if itemData.item.data.img}}{{itemData.item.data.img}}{{else}}{{itemData.item.img}}{{/if}}">
            <div class="result-text" {{#unless itemData.item.isText}}style="font-size: {{itemData.fontSize}}%;"{{/unless}}>
            {{#if itemData.item.isText}}
                <div class="result-text">{{itemData.item.text}}</div>
            {{else}}
                <a class="entity-link" draggable="true" {{#if itemData.item.compendium}}
                    data-pack="{{itemData.item.compendium.collection}}"
                    {{else}}
                    data-entity="{{itemData.item.documentName}}"
                    {{/if}}
                   data-id="{{itemData.item.id}}">
                    <i class="fas {{entity-icon itemData.item.documentName}}"></i> {{itemData.item.name}}
                </a>
            {{/if}}
                {{#ifgt itemData.quantity 1 }}<strong>&nbsp; &#xD7; {{itemData.quantity}}</strong>{{/ifgt}}
            </div>
        </li>
        {{/each}}
    </ol>
</div>